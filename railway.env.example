# ========================================
# CareerConnect AI - Railway Environment
# ========================================

# Application Configuration
NODE_ENV=production
PORT=3000
CLIENT_URL=https://careerconnect-ai-production.up.railway.app

# Database Configuration
# MONGODB_URI will be set by Railway from database service
# REDIS_URL will be set by Railway from Redis service (optional)

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Application Settings
ENABLE_LOGGING=true
LOG_LEVEL=info
ENABLE_METRICS=true
BCRYPT_ROUNDS=12
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# OAuth Configuration (Optional)
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# GOOGLE_CALLBACK_URL=https://careerconnect-ai-production.up.railway.app/api/auth/google/callback

# LINKEDIN_CLIENT_ID=
# LINKEDIN_CLIENT_SECRET=
# LINKEDIN_CALLBACK_URL=https://careerconnect-ai-production.up.railway.app/api/auth/linkedin/callback

# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=
# GITHUB_CALLBACK_URL=https://careerconnect-ai-production.up.railway.app/api/auth/github/callback

# Email Configuration (Optional)
# SMTP_HOST=
# SMTP_PORT=
# SMTP_USER=
# SMTP_PASS=
# EMAIL_FROM=

# External Services (Optional)
# GOOGLE_MEET_API_KEY=
# LINKEDIN_API_KEY=
# OPENAI_API_KEY=

# Security
ENABLE_HTTPS=true
TRUST_PROXY=true
