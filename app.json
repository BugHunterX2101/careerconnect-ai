{
  "name": "careerconnect-ai",
  "description": "AI-powered resume parsing and job recommendation platform",
  "repository": "https://github.com/BugHunterX2101/careerconnect-ai",
  "logo": "https://node-js-sample.herokuapp.com/node.png",
  "keywords": ["node", "express", "react", "ai", "resume", "jobs"],
  "env": {
    "NODE_ENV": {
      "description": "Environment",
      "value": "production"
    },
    "PORT": {
      "description": "Port for the application",
      "value": "3000"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    },
    "worker": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "addons": [
    {
      "plan": "mongolab:sandbox"
    },
    {
      "plan": "rediscloud:30"
    }
  ]
}
