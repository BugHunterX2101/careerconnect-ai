{
  "name": "careerconnect-ai",
  "version": "2.0.0",
  "description": "AI-powered resume parsing and job recommendation platform with BERT integration",
  "main": "src/server/index.js",
  "scripts": {
    "start": "node src/server/index.js",
    "dev": "nodemon src/server/index.js",
    "dev:full": "concurrently \"npm run dev\" \"npm run dev:client\"",
    "dev:client": "cd src/client && npm run dev",
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd src/client && npm run build",
    "build:server": "echo 'Server build complete'",
    "vercel-build": "npm run build:client",
    "setup": "node scripts/setup.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:integration": "node scripts/test-integration.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "docker:build": "docker build -t careerconnect-ai .",
    "docker:run": "docker run -p 3000:3000 careerconnect-ai",
    "docker:compose": "docker-compose up -d",
    "redis:start": "redis-server",
    "queue:worker": "node src/workers/jobQueue.js",
    "ml:train": "node src/ml/trainModel.js",
    "ml:predict": "node src/ml/predict.js",
    "clean": "rm -rf node_modules package-lock.json && cd src/client && rm -rf node_modules package-lock.json",
    "install:all": "npm install && cd src/client && npm install"
  },
  "keywords": [
    "ai",
    "bert",
    "resume-parsing",
    "job-recommendation",
    "machine-learning",
    "nodejs",
    "express",
    "mongodb",
    "redis",
    "docker"
  ],
  "author": "CareerConnect AI Team",
  "license": "MIT",
  "dependencies": {
    "@tensorflow/tfjs-node": "^4.17.0",
    "@tensorflow-models/universal-sentence-encoder": "^1.3.3",
    "bcryptjs": "^2.4.3",
    "bull": "^4.12.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "pdf-parse": "^1.1.1",
    "pdf2pic": "^3.1.0",
    "puppeteer": "^21.6.1",
    "redis": "^4.6.11",
    "sharp": "^0.33.1",
    "socket.io": "^4.7.4",
    "tesseract.js": "^5.0.4",
    "winston": "^3.11.0",
    "zod": "^3.22.4",
    "compression": "^1.7.4",
    "express-validator": "^7.0.1",
    "node-cron": "^3.0.3",
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.12",
    "natural": "^6.10.4",
    "compromise": "^14.10.0",
    "natural": "^6.10.4",
    "passport": "^0.6.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-linkedin-oauth2": "^2.0.0",
    "passport-github2": "^0.1.12",
    "googleapis": "^128.0.0",
    "nodemailer": "^6.9.5",
    "uuid": "^9.0.0",
    "moment": "^2.29.4",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "prettier": "^3.1.1",
    "@types/node": "^20.10.5",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
